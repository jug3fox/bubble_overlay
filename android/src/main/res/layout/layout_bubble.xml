<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardBackgroundColor="@android:color/darker_gray"
        app:cardCornerRadius="3dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bubble_custom_text_top"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="fill_horizontal"
                android:gravity="left"
                android:text="123456789012345"
                android:textAppearance="@android:style/TextAppearance"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bubble_custom_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="left"
                    android:text="abcdefghij"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/bubble_custom_text_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="12345678901234"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        app:cardElevation="5dp"
        app:cardCornerRadius="3dp">

        <ImageView
            android:id="@+id/bubble_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@drawable/circular_bordershape"
            android:src="@drawable/baseline_cancel_black_48dp"
            android:tint="#FFAAAA"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
